#!/bin/sh

OD=$(pwd)

# actualizar fuente
echo actualizando wiki con 'git pull'
cd wiki/src
git pull
cd ${OD}

# construir wiki
echo compilando wiki
ikiwiki --setup wiki.setup -refresh ${@}

